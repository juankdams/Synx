package Providers;

import ConfigurationObjects.GConfig;
import Constants.CWorld;
import Game.GameServer;
import Game.WakfuGameClient;
import Game.WakfuGameServer;
import Interfaces.IProvider;
import Login.LoginServer;
import Login.WakfuLoginClient;

public interface WakfuClientProvider extends IProvider {
	
	public GameServer createNew(LoginServer ls, GConfig config, CWorld cworld);
	
	public static class WakfuGameClientProvider implements ClientProvider {
		public GameServer createNew(LoginServer ls, GConfig config, CWorld cworld) {
			return new WakfuGameClient(ls, config, cworld);
		}
	}
	public static class WakfuLoginClientProvider implements ClientProvider {
		public GameServer createNew(LoginServer ls, GConfig config, CWorld cworld) {
			return new WakfuLoginClient(ls, config, cworld);
		}
	}
	
	

}
